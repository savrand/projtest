<% if !current_user %>
<h1>Вход</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :Логин %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :Пароль %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Войти" %></p>
<% end %>
<% end %>


